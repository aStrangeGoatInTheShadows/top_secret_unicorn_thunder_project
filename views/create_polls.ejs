<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/create_polls.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <div class="container">

      <h1>create poll</h1>
      <form class="input-container" action="/create_poll" method="post">
        <span>
          <input type="text" name="poll_title" id="poll_title" />
        </span>

        <span>
          <input type="email" name="creator_email" id="creator_email" />
        </span>

        <span>
          <input
          type="number"
          name="poll_num_of_options"
          id="poll_num_of_options"
        />
        </span>
       <span>
        <textarea
        name="poll_descr"
        id="poll_descr"
        cols="30"
        rows="10"
      ></textarea>
       </span>

        <button type="submit">create</button>
      </form>

    </div>
  </body>
</html>
